<root>
	<!-- Message of the Day -->
	<windowclass name="motd">
		<frame>utilitybox</frame>
		<placement>
			<size width="400" height="400" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_encounter</minimize>
		<nodelete />
		<tooltip textres="motd_window_title" />
		<sheetdata>
			<windowtitlebar name="title">
				<resource>motd_window_title</resource>
			</windowtitlebar>
			<anchor_title_utilitybox name="contentanchor" />

			<anchor_bottom_utilitybox name="bottomanchor" />

			<formattedtextfield name="text">
				<anchored to="contentanchor">
					<top anchor="bottom" relation="relative" offset="20" />
					<left offset="5" />
					<right offset="-10" />
					<bottom parent="bottomanchor" anchor="top" offset="-20" />
				</anchored>
				<frame name="groupbox" offset="15,15,20,15" />
				<empty textres="motd_empty" hidereadonly="true" />
			</formattedtextfield>
			<scrollbar>
				<anchored to="text" />
				<target>text</target>
			</scrollbar>

			<linkcontrol name="link">
				<anchored to="text" position="aboveleft" offset="-10,15" width="20" height="20" />
				<description textres="motd_window_title" />
				<class>motd</class>
				<readonly />
			</linkcontrol>

			<buttoncontrol name="button_replace">
				<anchored to="text" position="aboveright" offset="-20,15" width="30" height="20" />
				<tooltip textres="motd_tooltip_replace" />
				<icon normal="arrowleft" pressed="arrowleft" />
				<gmvisibleonly />
				<script>
					function onDrop(x, y, draginfo)
						if draginfo.isType("shortcut") then
							local sClass, sRecord = draginfo.getShortcutData();
							if sClass == "encounter" then
								window.text.setValue(DB.getValue(DB.getPath(sRecord, "text")));
								return true;
							end
						end
					end
				</script>
			</buttoncontrol>

			<resize_utilitybox />
			<close_utilitybox />
		</sheetdata>
	</windowclass>

	<!-- Color Select -->
	<windowclass name="pointerselection">
		<frame>utilitybox2</frame>
		<placement>
			<size width="330" height="155" />
		</placement>
		<script file="utility/scripts/pointer_selection.lua" />
		<sheetdata>
			<buttoncontrol name="color_main">
				<anchored width="50" height="50">
					<top offset="20" />
					<right anchor="center" offset="-10" />
				</anchored>
				<script>
					function onButtonPress()
						window.onMainColorButtonPressed();
					end
				</script>
			</buttoncontrol>
			<buttoncontrol name="color_dietext">
				<anchored width="50" height="50">
					<top offset="20" />
					<left anchor="center" offset="10" />
				</anchored>
				<script>
					function onButtonPress()
						window.onDieTextColorButtonPressed();
					end
				</script>
			</buttoncontrol>
		
			<simplestringc name="text">
				<anchored position="insidetop" offset="-20,80" />
				<multilinespacing>20</multilinespacing>
				<center />
				<static textres="pointerselection_text" />
			</simplestringc>

			<helper_color />
			<close_utilitybox2 />
		</sheetdata>
	</windowclass>

