			<script>
				function onButtonPress()
					local sClass = window.getClass();
					if sClass == "imagewindow" then
						ImageManager.sendWindowToBackPanel(window);
					elseif sClass == "imagebackpanel" then
						ImageManager.sendBackPanelToFullPanel();
					end
				end
			</script>
