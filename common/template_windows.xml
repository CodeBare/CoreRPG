	<template name="help_base">
		<buttoncontrol>
			<icon normal="button_help" pressed="button_help_down" hover="button_help_hover" />
			<script>
				local sUrl = nil;
				
				function onInit()
					if url then
						sUrl = url[1];
					elseif urlres then
						sUrl = Interface.getString(urlres[1]);
					end
				end
				
				function onButtonPress()
					if (sUrl or "") ~= "" then
						Interface.openWindow("url", sUrl);
					end
				end
			</script>
		</buttoncontrol>
	</template>
